version: '3.7'

services:
  flask-{{ project_name }}:
    container_name: {{ project_name }}
    image: {{ image_name }}
    restart: unless-stopped
    environment:
      VIRTUAL_HOST: {{ virtual_host }}
      VIRTUAL_PORT: "5000"
    expose:
      - "5000"
    networks:
      - proxy

networks:
  proxy:
    external: true
    name: proxy
